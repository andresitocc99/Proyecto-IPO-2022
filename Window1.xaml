<Window x:Class="Proyecto_final.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_final"
        mc:Ignorable="d"
        Title="Window1" Height="650" Width="900">
    <Grid Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="53*" />
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Información de socio" HorizontalAlignment="Left" Height="326" Grid.Row="1" VerticalAlignment="Top" Width="416" BorderThickness="2" Background="#FFE1F1FF" Margin="0,0.6,0,0">
            <Grid x:Name="InfoSocio" HorizontalAlignment="Left" Height="316" VerticalAlignment="Top" Width="406">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="200" Margin="5,0,0,0" VerticalAlignment="Top" Width="146">
                    <Image x:Name="UserAvatar" Source="images/user.png" MouseEnter="UserAvatar_MouseEnter" MouseLeave="UserAvatar_MouseLeave" MouseDown="UserAvatar_MouseDown"/>
                </Border>
                <Grid Grid.Column="1" Height="287" HorizontalAlignment="Left" Margin="9.8,10,-144,0" Width="235" VerticalAlignment="Top" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80 "/>
                        <ColumnDefinition Width="155"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="datosSocios" SelectedIndex="0" Width="115" Margin="5">
                        <ListBoxItem>Username</ListBoxItem>
                        <ListBoxItem>Nombre</ListBoxItem>
                        <ListBoxItem>Apellidos</ListBoxItem>
                        <ListBoxItem>DNI</ListBoxItem>
                        <ListBoxItem>Telefono</ListBoxItem>
                        <ListBoxItem>Ult.Acceso</ListBoxItem>
                    </ListBox>
                    
                </Grid>
                
            </Grid>
        </GroupBox>
        <Button x:Name="BtnExit" Content="Salir" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="117" Height="30" Click="BtnExit_Click" FontWeight="Bold"/>
        <Menu Grid.Row="0" x:Name="miMenu"
FontSize="16" FontWeight="Bold" Margin="-46,0,-45,26.4">

            <MenuItem Header="Ayuda" FontSize="14">
                <MenuItem x:Name="miAcercaDe" Header="Acerca de...">
                    <MenuItem.Icon>
                        <Image Source="images/question.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Perfil" FontSize="14">
                <MenuItem x:Name="EditarPerfil" Header="Cambiar imagen de perfil" Click="EditarPerfil_Click">
                    <MenuItem.Icon>
                        <Image Source="Images/user.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Ajustes" FontSize="14">
                <MenuItem x:Name="Ajustes" Header="Ajustes">
                    <MenuItem.Icon>
                        <Image Source="Images/gear.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <GroupBox Header="Gestión de voluntarios" HorizontalAlignment="Left" Height="188" Margin="0,331.6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="416" BorderThickness="2" Background="#FFE1F1FF">
            <Expander Header="Lista de voluntarios&#xD;&#xA;" HorizontalAlignment="Left" Height="159" Margin="10,0,-2,0" VerticalAlignment="Top" Width="396">
                <Grid Background="#FFE5E5E5" Margin="0,0,8.8,0">
                    <ListBox HorizontalAlignment="Left" Height="124" VerticalAlignment="Top" Width="386" Margin="0,0,-0.4,0" Cursor="Hand">
                        
                    </ListBox>
                </Grid>
            </Expander>
        </GroupBox>
    </Grid>
</Window>
